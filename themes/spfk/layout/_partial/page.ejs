<style>
    .article-meta {
        display: none;
    }
    #container .article .article-title {
        padding-right: 0;
    }
    .article-header {
        padding: 0;
        padding-top: 26px;
        border-left: none;
        text-align: center;
    }
    .article-header:hover {
        border-left: none;
    }
    .article-title {
        font-size: 1.6em
    }
    .article-meta {
        display: none;
    }
    .article-entry hr {
        margin: 0;
    }
    #container .article-info-post.article-info {
        display: none;
    }
    #container .article .article-title {
        padding: 0;
    }
    .count{
        text-align: center;
    }
</style>
<% if (page.path === "tags/index.html"){ %>
    <!-- Tag Cloud Page -->
    <p class="count"></p>
    <div class="tags">
        <%- tagcloud({
            min_font: 16,
            max_font: 16,
            amount: 999,
            color: false,
        }) %>
    </div>
    <style>
        .article-entry ul li:before{
            display: none;
        }
        .article-inner  {
            text-align: center;
        }
        .tags {
            max-width: 40em;
            margin: 2em auto;
            margin-top: 0em;
        }
        .tags a {
            display: inline-block;
            margin: 10px;
            color: #FFF;
        }
        .tags a:hover{
            color: #bbb;
        }
    </style>
    <script src="https://7.url.cn/edu/jslib/comb/require-2.1.6,jquery-1.9.1.min.js"></script>
    <p id="count">目前共计<span><script>document.write($(".tags > a").length)</script></span>个标签</p>
    <script>
        $('#count').appendTo('.count');
    </script>
<% } %>
<% if (page.path === "categories/index.html"){ %>
    <!-- categories Cloud Page -->
    <p class="count"></p>
    <div id="categories">
        <%- list_categories({
            depth: 1,
        }) %>
    </div>
    <style>
        .category-list{
            margin-top: 20px;
        }
        .category-list li{
            display: inline-block;
            margin: 10px;
            font-size: 16px;
        }
        .category-list li:hover{
            background: transparent;
        }
        #categories li:before{
            display: none;
        }
        .category-list a {
            color: #FFF;
            padding-right: 5px;
        }
        .category-list-item:hover a {
            color: #bbb;
            text-decoration: none;
        }
        .category-list-count {
            color: #bbb;
        }
        .category-list-count:after {
            display: inline;
            content: ") ";
        }
        .category-list-count:before {
            display: inline;
            content: " (";
        }
    </style>
    <script src="https://7.url.cn/edu/jslib/comb/require-2.1.6,jquery-1.9.1.min.js"></script>
    <p id="count">目前共计<span><script>document.write($(".category-list > li").length)</script></span>个标签</p>
    <script>
        $('#count').appendTo('.count');
    </script>
<% } %>